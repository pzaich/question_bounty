<div style="text-align:center;padding:50px 0;">
  <img src="/assets/3b_logo.png" />
  <p style="padding:10px 0">Get Simple, Fast.</p>
</div>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="well" style="width:240px;margin:0 auto">
    <p>
      <strong> Are you New to 3 Bullets?</stong>
      Sign up
    </p>
    <div><%= f.email_field :email, :placeholder => "Email", :style => "width:226px;" %></div>
    <div class="form-inline">
      <%= f.password_field :password, :placeholder => "Password", :style => "width:133px;" %>
      <%= f.password_field :password_confirmation, :placeholder => "Confirm Password", :style => "width:133px;" %>
      <%= f.submit "Sign in", :class => "btn btn-danger", :style => "margin-left:14px" %>
    </div>
    <div style="padding:10px 5px 0 5px;"><a href="/users/sign_in">Did you already sign up?</a></div>
  </div>
<% end %>
