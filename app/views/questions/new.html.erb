<%= form_for @question do |f| %>
	<p>
	  <%= f.label :title %>
	  <%= f.text_field :title %>
	</p>
	<p>
	  <%= f.label :description %>
	  <%= f.text_area :description %>
	</p>
	<p>
		<%= f.label :expiration %>
		<%= f.date_select :expiration %>
	</p>
	<p>
	  <%= f.submit :class => "btn" %>
	</p>
<% end %>