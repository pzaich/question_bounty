
<h2><%= @question.title %></h2>
<img src="<%= @question.image_url %>" alt="<%= @question.title %>" />
<p>
	<%= @question.description %>
</p>
<p>Time Left</p>
<h5><%= time_to_deadline(@question.expiration) %></h5>
<%= link_to "Add Your Bullets", new_question_answer_path(@question), :class => "btn btn-inverse" %> 
<ul>
	<% @question.answers.each do |answer| %>
		<ul>
			<% answer.arguments.each do |argument| %>
				<li>
					<p>
						<%= argument.response %>
					</p>
				</li>
			<% end %>
		</ul>
	<% end %>
</ul>

